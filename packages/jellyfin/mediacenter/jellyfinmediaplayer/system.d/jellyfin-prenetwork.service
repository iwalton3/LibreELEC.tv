[Unit]
Description=Jellyfin Media Player - Pre Network setup
Before=network.target

[Service]
ExecStartPre=/bin/sh -c "if [ ! -d /storage/.cache/libreelec ]; then mkdir /storage/.cache/libreelec; fi; if [ ! -f /storage/.cache/libreelec/network_wait ]; then cp /usr/share/jellyfinmediaplayer/network_wait /storage/.cache/libreelec/network_wait; fi"
ExecStart=/bin/sh -c "echo Setting up PMP required configs "

[Install]
WantedBy=jellyfin.target
